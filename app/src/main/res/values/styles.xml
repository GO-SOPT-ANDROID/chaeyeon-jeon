<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.GoSopt" parent="">
        <item name="android:fontFamily">@font/go_sopt_font</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.GoSopt.DisplayMedium">
        <item name="android:fontFamily">@font/pretendard_extrabold</item>
        <item name="android:fontWeight">800</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">30dp</item>
    </style>

    <style name="TextAppearance.GoSopt.HeadlineMedium">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">22sp</item>
    </style>

    <style name="TextAppearance.GoSopt.BodyLarge">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="TextAppearance.GoSopt.BodySmall">
        <item name="android:fontFamily">@font/pretendard_light</item>
        <item name="android:fontWeight">300</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="TextAppearance.GoSopt.CaptionMedium">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">15dp</item>
    </style>

    <style name="Widget.GoSopt.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?colorOnPrimary</item>
    </style>
</resources>