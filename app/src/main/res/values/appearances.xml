<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.GoSopt" parent="">
        <item name="android:fontFamily">@font/sopt_font</item>
        <item name="fontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.GoSopt.DisplayMedium">
        <item name="fontWeight">800</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">30dp</item>
    </style>

    <style name="TextAppearance.GoSopt.HeadlineMedium">
        <item name="fontWeight">700</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">22sp</item>
    </style>

    <style name="TextAppearance.GoSopt.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="TextAppearance.GoSopt.BodySmall">
        <item name="fontWeight">300</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="TextAppearance.GoSopt.CaptionMedium">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">15dp</item>
    </style>
</resources>