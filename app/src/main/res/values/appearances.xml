<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.GoSopt" parent="">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.GoSopt.DisplayMedium">
        <item name="fontFamily">@font/font_pretendard_extrabold</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">30sp</item>
    </style>

    <style name="TextAppearance.GoSopt.HeadlineMedium">
        <item name="fontFamily">@font/font_pretendard_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">22sp</item>
    </style>

    <style name="TextAppearance.GoSopt.BodyLarge">
        <item name="fontFamily">@font/font_pretendard_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="TextAppearance.GoSopt.BodySmall">
        <item name="fontFamily">@font/font_pretendard_light</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="TextAppearance.GoSopt.CaptionMedium">
        <item name="fontFamily">@font/font_pretendard_light</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">15sp</item>
    </style>
</resources>