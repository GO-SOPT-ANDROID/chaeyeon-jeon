<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.GoSopt" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/coral_600</item>
        <item name="colorPrimaryVariant">@color/gray_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/coral_700</item>
        <item name="colorSecondaryVariant">@color/coral_800</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Neutral key color. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/mint_600</item>
        <item name="colorOnError">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Remove font padding. -->
        <item name="android:includeFontPadding">false</item>
        <!-- Font theme. -->
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.GoSopt.DisplayMedium</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.GoSopt.HeadlineMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.GoSopt.BodyLarge</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.GoSopt.BodySmall</item>
        <item name="textAppearanceCaption">@style/TextAppearance.GoSopt.CaptionMedium</item>
        <!-- Splash screen color. -->
        <item name="android:windowSplashScreenBackground">@color/gray_900</item>
    </style>
</resources>